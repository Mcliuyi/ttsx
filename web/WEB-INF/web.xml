<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    
    <servlet>
        <!-- 注册 -->
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>com.ly.servlet.RegisterServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <!-- 登录 -->
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.ly.servlet.LoginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <!-- 注销 -->
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.ly.servlet.LogoutServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>


    <servlet>
        <!-- 商品查询 -->
        <servlet-name>CommodityServlet</servlet-name>
        <servlet-class>com.ly.servlet.CommodityServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>CommodityServlet</servlet-name>
        <url-pattern>/commodity</url-pattern>
    </servlet-mapping>


    <servlet>
        <!-- 商品类型查询 -->
        <servlet-name>CommodityTypeListServlet</servlet-name>
        <servlet-class>com.ly.servlet.CommodityTypeListServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>CommodityTypeListServlet</servlet-name>
        <url-pattern>/list</url-pattern>
    </servlet-mapping>


    <servlet>
        <!-- 商品详细查询 -->
        <servlet-name>CommodityDetailServlet</servlet-name>
        <servlet-class>com.ly.servlet.CommodityDetailServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>CommodityDetailServlet</servlet-name>
        <url-pattern>/detail</url-pattern>
    </servlet-mapping>



    <servlet>
        <!-- 收货地址 -->
        <servlet-name>AddressServlet</servlet-name>
        <servlet-class>com.ly.servlet.AddressServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AddressServlet</servlet-name>
        <url-pattern>/address</url-pattern>
    </servlet-mapping>


    <!--过滤器，设置请求响应编码-->
    <filter>
        <filter-name>setCharaterEncoding</filter-name>
        <filter-class>com.ly.fllter.SetCharacterEncodingFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>setCharaterEncoding</filter-name>
        <!--<url-pattern>/*</url-pattern>-->
        <servlet-name>*</servlet-name>
    </filter-mapping>

    <!--过滤器，访问主页设置商品类型-->
    <filter>
        <filter-name>IndexFilter</filter-name>
        <filter-class>com.ly.fllter.IndexFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>IndexFilter</filter-name>
        <url-pattern>/index.jsp</url-pattern>
    </filter-mapping>

