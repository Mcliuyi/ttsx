<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    
    <servlet>
        <!-- 注册 -->
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>com.ly.servlet.RegisterServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>


    <servlet>
        <!-- 验证注册时输入信息是否已经存在 -->
        <servlet-name>VerificationUserServlet</servlet-name>
        <servlet-class>com.ly.servlet.VerificationUserServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>VerificationUserServlet</servlet-name>
        <url-pattern>/verUserInfo</url-pattern>
    </servlet-mapping>

    <servlet>
        <!-- 登录 -->
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.ly.servlet.LoginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <!-- 注销 -->
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.ly.servlet.LogoutServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>


    <servlet>
        <!-- 商品查询 -->
        <servlet-name>CommodityServlet</servlet-name>
        <servlet-class>com.ly.servlet.CommodityServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>CommodityServlet</servlet-name>
        <url-pattern>/commodity</url-pattern>
    </servlet-mapping>


    <servlet>
        <!-- 商品类型查询 -->
        <servlet-name>CommodityTypeListServlet</servlet-name>
        <servlet-class>com.ly.servlet.CommodityTypeListServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>CommodityTypeListServlet</servlet-name>
        <url-pattern>/list</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>CommodityTypeListServlet</servlet-name>
        <url-pattern>/admin/list</url-pattern>
    </servlet-mapping>

    <servlet>
        <!-- 商品详细查询 -->
        <servlet-name>CommodityDetailServlet</servlet-name>
        <servlet-class>com.ly.servlet.CommodityDetailServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>CommodityDetailServlet</servlet-name>
        <url-pattern>/detail</url-pattern>
    </servlet-mapping>

    <servlet>
        <!-- 收货地址 -->
        <servlet-name>AddressServlet</servlet-name>
        <servlet-class>com.ly.servlet.AddressServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AddressServlet</servlet-name>
        <url-pattern>/address</url-pattern>
    </servlet-mapping>


    <servlet>
        <!-- 购物车 -->
        <servlet-name>ShowShopCartServlet</servlet-name>
        <servlet-class>com.ly.servlet.ShowShopCartServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ShowShopCartServlet</servlet-name>
        <url-pattern>/cart</url-pattern>
    </servlet-mapping>

    <servlet>
        <!-- 添加商品到购物车 -->
        <servlet-name>AddShopCartServlet</servlet-name>
        <servlet-class>com.ly.servlet.AddShopCartServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AddShopCartServlet</servlet-name>
        <url-pattern>/add</url-pattern>
    </servlet-mapping>

    <servlet>
        <!-- 删除购物车商品 -->
        <servlet-name>DelteShopCartServlet</servlet-name>
        <servlet-class>com.ly.servlet.DelteShopCartServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>DelteShopCartServlet</servlet-name>
        <url-pattern>/del</url-pattern>
    </servlet-mapping>

    <servlet>
        <!-- 提交订单 -->
        <servlet-name>SettlementCommodityServlet</servlet-name>
        <servlet-class>com.ly.servlet.SettlementCommodityServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>SettlementCommodityServlet</servlet-name>
        <url-pattern>/settlement</url-pattern>
    </servlet-mapping>

    <servlet>
        <!-- 查询订信息 -->
        <servlet-name>OrderInfoServlet</servlet-name>
        <servlet-class>com.ly.servlet.OrderInfoServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>OrderInfoServlet</servlet-name>
        <url-pattern>/order</url-pattern>
    </servlet-mapping>

    <servlet>
        <!-- 付款 -->
        <servlet-name>PaymentServlet</servlet-name>
        <servlet-class>com.ly.servlet.PaymentServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>PaymentServlet</servlet-name>
        <url-pattern>/scs</url-pattern>
    </servlet-mapping>


    <servlet>
        <!-- 后台登录 -->
        <servlet-name>AdminLoginServlet</servlet-name>
        <servlet-class>com.ly.servlet.admin.AdminLoginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AdminLoginServlet</servlet-name>
        <url-pattern>/admin/login</url-pattern>
    </servlet-mapping>


    <servlet>
        <!-- 后台首页数据展示 -->
        <servlet-name>DataStatisticsServlet</servlet-name>
        <servlet-class>com.ly.servlet.admin.DataStatisticsServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>DataStatisticsServlet</servlet-name>
        <url-pattern>/admin/index</url-pattern>
    </servlet-mapping>


    <servlet>
        <!-- 后台用户信息展示 -->
        <servlet-name>UserManageServlet</servlet-name>
        <servlet-class>com.ly.servlet.admin.UserManageServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>UserManageServlet</servlet-name>
        <url-pattern>/admin/user</url-pattern>
    </servlet-mapping>


    <servlet>
        <!-- 添加商品 -->
        <servlet-name>AddCommodityServlet</servlet-name>
        <servlet-class>com.ly.servlet.admin.AddCommodityServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>AddCommodityServlet</servlet-name>
        <url-pattern>/admin/add</url-pattern>
    </servlet-mapping>

    <servlet>
        <!-- 修改商品信息展示 -->
        <servlet-name>UpdateCommodityServlet</servlet-name>
        <servlet-class>com.ly.servlet.admin.UpdateCommodityServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>UpdateCommodityServlet</servlet-name>
        <url-pattern>/admin/update</url-pattern>
    </servlet-mapping>


    <servlet>
        <!-- 后台用户信息展示 -->
        <servlet-name>CommodityTypeServlet</servlet-name>
        <servlet-class>com.ly.servlet.admin.CommodityTypeServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>CommodityTypeServlet</servlet-name>
        <url-pattern>/admin/commodityType</url-pattern>
    </servlet-mapping>

    <!--过滤器，设置请求响应编码-->
    <filter>
        <filter-name>setCharaterEncoding</filter-name>
        <filter-class>com.ly.fllter.SetCharacterEncodingFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>setCharaterEncoding</filter-name>
        <!--<url-pattern>/*</url-pattern>-->
        <servlet-name>*</servlet-name>
    </filter-mapping>


    <!--过滤器，访问主页设置商品类型-->
    <filter>
        <filter-name>IndexFilter</filter-name>
        <filter-class>com.ly.fllter.IndexFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>IndexFilter</filter-name>
        <url-pattern>/index.jsp</url-pattern>
    </filter-mapping>

